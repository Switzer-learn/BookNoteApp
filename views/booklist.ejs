<%-include("./partials/header.ejs")%>

<div class="container">
    <div class="row">
        <h1>All Book List</h1>
    </div>
    <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <%books.forEach((book)=>{%>
            <div class="col py-3">
              <div class="card shadow-sm">
                <img src="https://covers.openlibrary.org/b/isbn/<%=book.isbn%>-L.jpg" class="bd-placeholder-img card-img-top py-1 px-1" style="object-fit:contain;" width="100%" height="225" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                <div class="card-body">
                  <p class="card-text text-truncate text-wrap"><strong><%=book.title%></strong></p>
                  <p class="card-text text-truncate text-wrap"><%=book.description%></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <form action="/detail" method="post">
                            <input type="hidden" name="id" value="<%=book.id%>">
                            <input type="submit" class="btn" value="Details">
                        </form>
                    </div>
                    <small class="text-body-secondary">ISBN :<%=book.isbn%></small>
                  </div>
                </div>
              </div>
            </div>
            <%})%>
          </div>
        </div>
      </div>
</div>

<%-include("./partials/footer.ejs")%>